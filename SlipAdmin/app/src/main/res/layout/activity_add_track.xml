<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#201EE9BA"
    tools:context=".AddTrackActivity">

    <TextView
        android:id="@+id/textViewArtistName"
        android:layout_width="412dp"
        android:layout_height="41dp"
        android:text="TextView"
        android:textColor="#89090909"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="21dp" />

    <TextView
        android:textColor="#89090909"
        android:id="@+id/textViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:gravity="center_horizontal"
        android:text="Progress and Work Log"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddTrack"
        tools:layout_editor_absoluteX="-2dp" />

    <Button
        android:id="@+id/buttonAddTrack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:text="Add"
        app:layout_constraintTop_toBottomOf="@+id/seekBarRating"
        tools:layout_editor_absoluteX="-31dp" />

    <SeekBar
        android:id="@+id/seekBarRating"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="180dp"

        android:background="#201EE9BA"
        android:fontFamily="sans-serif"
        android:hint="EnterName"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/editTextTrackName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="244dp"
        android:ems="10"
        android:hint="Enter Log Data"
        android:inputType="textPersonName"
        android:textColor="#89090909"
        app:layout_constraintBottom_toTopOf="@+id/buttonAddTrack"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.01"
        tools:ignore="UnknownId"
        tools:layout_editor_absoluteX="16dp" />

    <ListView
        android:id="@+id/listViewTracks"
        android:layout_width="409dp"
        android:layout_height="170dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewName"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>